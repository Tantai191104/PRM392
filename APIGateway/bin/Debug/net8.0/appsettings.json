{
  "ReverseProxy": {
    "Routes": {
      "authRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        }
      },
      "productRoute": {
        "ClusterId": "productCluster",
        "Match": {
          "Path": "/product/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "auth1": { "Address": "https://localhost:5001/" }
        }
      },
      "productCluster": {
        "Destinations": {
          "product1": { "Address": "https://localhost:5002/" }
        }
      }
    }
  }
}
