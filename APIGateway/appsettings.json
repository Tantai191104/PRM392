{
  "Redis": {
    "ConnectionString": "localhost:6379,password=PRM392Redis2024!SecurePassword",
    "InstanceName": "PRM392:"
  },
  "RateLimit": {
    "RequestLimit": 100,
    "TimeWindowMinutes": 1,
    "EnableRateLimiting": true
  },
  "CacheSettings": {
    "DefaultExpirationMinutes": 5,
    "DashboardCacheMinutes": 2,
    "UserCacheMinutes": 10,
    "ProductCacheMinutes": 5
  },
  "Services": {
    "AuthService": "http://authservice:5133",
    "ProductService": "http://productservice:5137",
    "OrderService": "http://orderservice:5139",
    "WalletService": "http://walletservice:5150",
    "EscrowService": "http://escrowservice:5141",
    "ChatService": "http://chatservice:5142"
  },

  "ReverseProxy": {
    "Routes": {
      "priceSuggestionApi": {
        "ClusterId": "productCluster",
        "Match": { "Path": "/api/price-suggestion/{**catch-all}" }
      },
      "authSwagger": {
        "ClusterId": "authCluster",
        "Match": { "Path": "/api/auth/swagger/{**catch-all}" },
        "Transforms": [{ "PathRemovePrefix": "/api/auth" }]
      },
      "authHealth": {
        "ClusterId": "authCluster",
        "Match": { "Path": "/api/auth/health" },
        "Transforms": [{ "PathRemovePrefix": "/api/auth" }]
      },
      "authApi": {
        "ClusterId": "authCluster",
        "Match": { "Path": "/api/auth/{**catch-all}" }
      },
      "userApi": {
        "ClusterId": "authCluster",
        "Match": { "Path": "/api/users/{**catch-all}" }
      },
      "productSwagger": {
        "ClusterId": "productCluster",
        "Match": { "Path": "/api/products/swagger/{**catch-all}" },
        "Transforms": [{ "PathRemovePrefix": "/api/products" }]
      },
      "productHealth": {
        "ClusterId": "productCluster",
        "Match": { "Path": "/api/products/health" },
        "Transforms": [{ "PathRemovePrefix": "/api/products" }]
      },
      "productApi": {
        "ClusterId": "productCluster",
        "Match": { "Path": "/api/products/{**catch-all}" }
      },
      "orderSwagger": {
        "ClusterId": "orderCluster",
        "Match": { "Path": "/api/orders/swagger/{**catch-all}" },
        "Transforms": [{ "PathRemovePrefix": "/api/orders" }]
      },
      "orderHealth": {
        "ClusterId": "orderCluster",
        "Match": { "Path": "/api/orders/health" },
        "Transforms": [{ "PathRemovePrefix": "/api/orders" }]
      },
      "orderApi": {
        "ClusterId": "orderCluster",
        "Match": { "Path": "/api/orders/{**catch-all}" }
      },
      "mediaSwagger": {
        "ClusterId": "mediaCluster",
        "Match": { "Path": "/api/media/swagger/{**catch-all}" },
        "Transforms": [{ "PathRemovePrefix": "/api/media" }]
      },
      "mediaHealth": {
        "ClusterId": "mediaCluster",
        "Match": { "Path": "/api/media/health" },
        "Transforms": [{ "PathRemovePrefix": "/api/media" }]
      },
      "mediaApi": {
        "ClusterId": "mediaCluster",
        "Match": { "Path": "/api/media/{**catch-all}" }
      },
      "escrowSwagger": {
        "ClusterId": "escrowCluster",
        "Match": { "Path": "/api/escrows/swagger/{**catch-all}" },
        "Transforms": [{ "PathRemovePrefix": "/api/escrows" }]
      },
      "escrowHealth": {
        "ClusterId": "escrowCluster",
        "Match": { "Path": "/api/escrows/health" },
        "Transforms": [{ "PathRemovePrefix": "/api/escrows" }]
      },
      "escrowApi": {
        "ClusterId": "escrowCluster",
        "Match": { "Path": "/api/escrows/{**catch-all}" }
      },
      "escrowSingularHealth": {
        "ClusterId": "escrowCluster",
        "Match": { "Path": "/api/escrow/health" },
        "Transforms": [{ "PathRemovePrefix": "/api/escrow" }]
      },
      "escrowSingularApi": {
        "ClusterId": "escrowCluster",
        "Match": { "Path": "/api/escrow/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/api/escrow" },
          { "PathPrefix": "/api/escrows" }
        ]
      },
      "escrowSingularSwagger": {
        "ClusterId": "escrowCluster",
        "Match": { "Path": "/api/escrow/swagger/{**catch-all}" },
        "Transforms": [{ "PathRemovePrefix": "/api/escrow" }]
      },
      "chatSwagger": {
        "ClusterId": "chatCluster",
        "Match": { "Path": "/api/chat/swagger/{**catch-all}" },
        "Transforms": [{ "PathRemovePrefix": "/api/chat" }]
      },
      "chatHealth": {
        "ClusterId": "chatCluster",
        "Match": { "Path": "/api/chat/health" },
        "Transforms": [{ "PathRemovePrefix": "/api/chat" }]
      },
      "chatApi": {
        "ClusterId": "chatCluster",
        "Match": { "Path": "/api/chats/{**catch-all}" }
      },
      "walletSwagger": {
        "ClusterId": "walletCluster",
        "Match": { "Path": "/api/wallet/swagger/{**catch-all}" },
        "Transforms": [{ "PathRemovePrefix": "/api/wallet" }]
      },
      "walletHealth": {
        "ClusterId": "walletCluster",
        "Match": { "Path": "/api/wallet/health" },
        "Transforms": [{ "PathRemovePrefix": "/api/wallet" }]
      },
      "walletApi": {
        "ClusterId": "walletCluster",
        "Match": { "Path": "/api/wallets/{**catch-all}" }
      },
      "zalopayApi": {
        "ClusterId": "walletCluster",
        "Match": { "Path": "/api/zalopay/{**catch-all}" }
      }
    },

    "Clusters": {
      "authCluster": {
        "Destinations": {
          "auth1": { "Address": "http://authservice:5133" }
        }
      },
      "productCluster": {
        "Destinations": {
          "product1": { "Address": "http://productservice:5137" }
        }
      },
      "orderCluster": {
        "Destinations": {
          "order1": { "Address": "http://orderservice:5139" }
        }
      },
      "mediaCluster": {
        "Destinations": {
          "media1": { "Address": "http://mediaservice:5140" }
        }
      },
      "escrowCluster": {
        "Destinations": {
          "escrow1": { "Address": "http://escrowservice:5141" }
        }
      },
      "chatCluster": {
        "Destinations": {
          "chat1": { "Address": "http://chatservice:5142" }
        }
      },
      "walletCluster": {
        "Destinations": {
          "wallet1": { "Address": "http://walletservice:5150" }
        }
      }
    }
  },

  "DownstreamSwagger": {
    "auth": "http://authservice:5133/swagger/v1/swagger.json",
    "products": "http://productservice:5137/swagger/v1/swagger.json",
    "orders": "http://orderservice:5139/swagger/v1/swagger.json",
    "media": "http://mediaservice:5140/swagger/v1/swagger.json",
    "escrow": "http://escrowservice:5141/swagger/v1/swagger.json",
    "chat": "http://chatservice:5142/swagger/v1/swagger.json",
    "wallet": "http://walletservice:5150/swagger/v1/swagger.json"
  }
}
