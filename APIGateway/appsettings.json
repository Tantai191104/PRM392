{
  "ReverseProxy": {
    "Routes": {
      "authSwagger": {
        "ClusterId": "authCluster",
        "Match": { "Path": "/auth/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/auth" } ]
      },
      "productSwagger": {
        "ClusterId": "productCluster",
        "Match": { "Path": "/product/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/product" } ]
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "auth1": { "Address": "http://authservice:5133" }
        }
      },
      "productCluster": {
        "Destinations": {
          "product1": { "Address": "http://productservice:5137" }
        }
      }
    }
  }
}
